---
import Link from "../UI/Links/Link.astro";
import Button from "../UI/Button/Button.astro";
import {Image} from 'astro:assets';

import './header.css'
import Logo from "../UI/Logo/Logo.astro";
import Container from "../UI/Container/Container.astro";
---

<header class="header">
    <Container size="nm">
        <div class="header-inner">
            <Logo/>
            <nav class="header-nav">

                <input class="visually-hidden" id="burger-toggle" type="checkbox">
                <label class="menu-burger" for="burger-toggle">
                    <span class="visually-hidden">Menu burger</span>
                    <span class="burger-item"></span>
                </label>
                <ul class="nav-list">
                    <li class="nav-item">
                        <Link>
                            Главная
                        </Link>
                    </li>
                    <li class="nav-item">
                        <Link>
                            Карточки
                        </Link>
                    </li>
                    <li class="nav-item">
                        <Link>
                            Сетка
                        </Link>
                    </li>
                    <li class="nav-item">
                        <Link>
                            Форма
                        </Link>
                    </li>
                </ul>

                <div class="nav-actions">
                    <Button type="button">Связаться</Button>
                </div>
            </nav>
        </div>
    </Container>
</header>
